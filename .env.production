# Production Environment Variables
# Copy this to your Vercel/Production environment

# Database
MONGODB_URI=your_production_mongodb_uri

# JWT Configuration - SET A STRONG SECRET IN PRODUCTION!
JWT_SECRET=your_production_jwt_secret_min_32_characters_required
JWT_EXPIRE=30d
JWT_COOKIE_EXPIRE=30

# Server Configuration
NODE_ENV=production
PORT=3001
CORS_ORIGIN=https://your-frontend-domain.com

# Email Configuration
SMTP_SERVICE=gmail
SMTP_EMAIL=your_production_email@gmail.com
SMTP_PASSWORD=your_gmail_app_password
SMTP_FROM_EMAIL=noreply@continentaltravelsandtours.com
FRONTEND_URL=https://your-frontend-domain.com

# Cloudinary Configuration for Image Uploads
CLOUDINARY_CLOUD_NAME=your_cloudinary_cloud_name
CLOUDINARY_API_KEY=your_cloudinary_api_key
CLOUDINARY_API_SECRET=your_cloudinary_api_secret

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
